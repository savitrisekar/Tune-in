<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:background="@color/grey_161619">

    <ImageView
        android:id="@+id/shimmer_item_image"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@color/grey_292c30"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        android:id="@+id/shimmer_item_title"
        layout="@layout/shimmer_default"
        android:layout_width="0dp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_item_image"/>

    <include
        android:id="@+id/shimmer_item_artist"
        layout="@layout/shimmer_default"
        android:layout_width="0dp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginHorizontal="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="@id/shimmer_item_image"
        app:layout_constraintTop_toBottomOf="@id/shimmer_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/shimmer_item_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>